<h1>Articles Listing Page:</h1>

<table>
    <thead>
        <tr>
            <th>Article ID</th>
            <th>Article Title</th>
            <th>Article Description</th>
            <th>Article Actions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td>Pepe rompe</td>
            </tr>
        <% end %>
    </tbody>
    
</table>